{
  "name": "imcity-tech/laravel-translatable",
  "description": "[fork] The package provides possibility to translate your Eloquent models into different languages using a single database table.",
  "license": "MIT",
  "keywords": ["translations", "localization", "laravel"],
  "homepage": "https://github.com/nevadskiy/laravel-translatable",
  "authors": [
    {
      "name": "Nevadskiy",
      "email": "nevadskiy@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "laravel/framework": "^9.0",
    "imcity-tech/laravel-uuid": "^0.8.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.0",
    "orchestra/testbench": "^5.0|^6.0",
    "mockery/mockery": "^1.2",
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "autoload": {
    "psr-4": {
      "Nevadskiy\\Translatable\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Nevadskiy\\Translatable\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Nevadskiy\\Translatable\\TranslatableServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "fix": "php-cs-fixer fix"
  }
}
